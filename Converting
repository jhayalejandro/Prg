package convertinchtocm;

/**
 *
 * @author 041209329
 */
    
    //import the scanner
    import java.util.*;
    import javax.swing.*;
    
    public class ConvertInchtoCm {
     /**
     * @param args the command line arguments
     */
    //Set the console variable
    static Scanner Console = new Scanner (System.in);
    
    //Set the Conversion amount
    final static double CONVERSION_RATE = 2.54; 
    
    public static void main(String[] args) {
    //Variables for the program
    double InputInches; 
    
    //Display a message asking for inches
    InputInches = Integer.JOptionPane.showInputDialog("Please enter the amount of inches.");
    
    //display the centimetre amount
    System.out.print("You entered" + InputInches + "\nWhich converts to" + (InputInches * CONVERSION_RATE) + "cm");
    }
}
